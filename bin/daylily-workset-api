#!/usr/bin/env python3
"""Backward-compatible wrapper for the Daylily workset API CLI.

The packaged entrypoint is `daylily-workset-api` -> `daylib.workset_api_cli:main`.
This script remains for repo-local usage and older tooling.
"""

from __future__ import annotations

import sys
from pathlib import Path


if __package__ in {None, ""}:
    sys.path.insert(0, str(Path(__file__).resolve().parents[1]))

from daylib.workset_api_cli import main


if __name__ == "__main__":
    sys.exit(main())

